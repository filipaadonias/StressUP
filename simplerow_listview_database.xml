<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dateDatabaseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Date"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timeDatabaseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Time"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintBottom_toBottomOf="@+id/dateDatabaseTextView"
        app:layout_constraintStart_toEndOf="@+id/dateDatabaseTextView"
        app:layout_constraintTop_toTopOf="@+id/dateDatabaseTextView" />

    <TextView
        android:id="@+id/hrvDatabaseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="HRV"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintBottom_toBottomOf="@+id/timeDatabaseTextView"
        app:layout_constraintStart_toEndOf="@+id/timeDatabaseTextView"
        app:layout_constraintTop_toTopOf="@+id/timeDatabaseTextView" />

    <TextView
        android:id="@+id/diagnosisDatabaseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diagnostic"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintBottom_toBottomOf="@+id/hrvDatabaseTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/hrvDatabaseTextView"
        app:layout_constraintTop_toTopOf="@+id/hrvDatabaseTextView" />
</android.support.constraint.ConstraintLayout>
